<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  xmlns:tools="http://schemas.android.com/tools"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:orientation="vertical"
  android:weightSum="4"
  tools:context=".HomeActivity">


  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:orientation="vertical"
    android:layout_weight="2">

      <ImageView
        android:src="@drawable/logo3"
        android:scaleType="fitXY"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />


  </LinearLayout>


  <LinearLayout
    android:orientation="vertical"
    android:background="@android:color/white"
    android:layout_margin="16dp"
    android:padding="16dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
      android:id="@+id/choose_location"
      android:text="CHOOSE LOCATION"
      android:textStyle="bold"
      android:textColor="@color/colorAccent"
      android:layout_margin="16dp"
      android:textSize="24dp"
      android:fontFamily="cursive"
      android:layout_width="match_parent"
      android:layout_height="wrap_content" />
    <RadioGroup
      android:id="@+id/radioLocation"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content">

      <RadioButton
        android:id="@+id/location1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/radio_location1"
        android:checked="true"/>

      <RadioButton
        android:id="@+id/location2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/radio_location2" />

      <RadioButton
        android:id="@+id/location3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/radio_location3" />

    </RadioGroup>

    <TextView
      android:id="@+id/choose_number"
      android:text="Number Of Seedlings:"
      android:textStyle="bold"
      android:textColor="@color/colorAccent"
      android:layout_margin="16dp"
      android:textSize="24dp"
      android:fontFamily="cursive"
      android:layout_width="match_parent"
      android:layout_height="wrap_content" />

    <com.rengwuxian.materialedittext.MaterialEditText
      android:id="@+id/nu_seedlings"
      android:hint="Number of Seedlings"
      android:inputType="numberDecimal"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      app:met_textColor="@color/colorAccent"
      app:met_baseColor="@color/colorAccent"
      app:met_primaryColor="@color/colorAccent"
      app:met_iconPadding="0dp" />

    <Button
      android:id="@+id/btnDisplay"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="@string/btn_display" />

  </LinearLayout>


  <Button
    android:id="@+id/adopt"
    style="@style/Base.Widget.AppCompat.Button.Borderless.Colored"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    android:background="@color/colorAccent"
    android:text="ADOPT"
    android:textColor="@android:color/white"
    android:textSize="20sp" />

  <Button
    android:id="@+id/cancel_adopt"
    style="@style/Base.Widget.AppCompat.Button.Borderless.Colored"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    android:background="@color/colorAccent"
    android:text="CANCEL"
    android:textColor="@android:color/white"
    android:textSize="20sp" />






</LinearLayout>
